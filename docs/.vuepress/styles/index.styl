  background-position: left center
  background-repeat: no-repeat
  padding-left: 34px

.article-list__item
  position: relative
  display: flex
  flex-direction: column

  img
    border-radius: 6px

  h3
    font-weight: 700
    font-size: 20px
    margin-bottom: 10px
    line-height: 32px

  p
    color: #6B6C6E
    font-size: 16px
    line-height: 25px
    margin: 0 0 20px

.article-list__item__footer
  align-content: flex-end
  flex-grow: 1
  display: flex
  flex-direction: column
  justify-content: flex-end

.article-list > .article-list__item:nth-child(3n-2),
.article-list > .article-list__item:nth-child(3n-1)
  &::after
    position: absolute
    top: 0
    right: -15px
    content: ""
    display: block
    height: 100%
    width: 1px
    border-right: 1px solid #E2E2E5

.app-item-logo
  border-radius: 10px
  padding: 20px
  height: 100px

.app-item-logo__logo
  height: 100px

.article-list__item:nth-of-type(4n - 3)
  .app-item-logo
    background-color: #E2B3FF

.article-list__item:nth-of-type(4n - 2)
  .app-item-logo
    background-color: #B3C4FF

.article-list__item:nth-of-type(4n - 1)
  .app-item-logo
    background-color: #FFE380

.article-list__item:nth-of-type(4n - 0)
  .app-item-logo
    background-color: #FFBD99

.app-item-logo-directory
  background-color: #ADFFDB !important

.app-item-logo-procurement_consumers
  background-color: #FFD9C7 !important

.app-item-logo-procurement_suppliers
  background-color: #FFEFB6 !important

.sidebar
  .sidebar-heading
    padding-left: 32px

  a.sidebar-link
    line-height: 1.7
    margin: 4px 0

    &:hover
      background-color: #F2F3F5
      color: $textColor

    &.active
      background-color: $accentColorLight
      color: $textColor

  .sidebar-sub-header
    a.sidebar-link
      margin-right: 10px
      border-radius: 6px
      width: auto
      display: block

      &.active
        background-color: transparent
