@import 'swagger-ui'
@import 'jwt-verifier'
@import 'browser-mockup'

.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
  margin-top: 15px;
}

.grid > div {
  background-color: #F2F3F5;
  padding: 15px;
  border-radius: 6px;
  text-align: center;
}

.grid .browser-mockup {
  margin: 0;
  margin-bottom: 10px;
}

.theme-container.full-width .content__default {
  max-width: 1300px;
  padding: 0;
}

.theme-container.changelog .content__default {
  max-width: 1000px;
}

.changelog-wrapper {
  padding-top: 50px;
}

#api-doc-wrapper {
  padding-top: 1px;
}

.navbar .site-name {
  display: none;
}

.home .hero .action-button {
  color: #000 !important;
}

.navbar .logo {
  vertical-align: middle !important;
  height: 1.7rem !important;
}

a {
  color: #40b781;
}

.u-flex
  display: flex

.u-col-1
  width: calc(100% * (1/12))
  flex-basis: calc(100% * (1/12))

.u-col-2
  width: calc(100% * (2/12))
  flex-basis: calc(100% * (2/12))

.u-col-3
  width: calc(100% * (3/12))
  flex-basis: calc(100% * (3/12))

.u-col-4
  width: calc(100% * (4/12))
  flex-basis: calc(100% * (4/12))

.u-col-5
  width: calc(100% * (5/12))
  flex-basis: calc(100% * (5/12))

.u-col-6
  width: calc(100% * (6/12))
  flex-basis: calc(100% * (6/12))

.u-col-7
  width: calc(100% * (7/12))
  flex-basis: calc(100% * (7/12))

.u-col-8
  width: calc(100% * (8/12))
  flex-basis: calc(100% * (8/12))

.u-col-9
  width: calc(100% * (9/12))
  flex-basis: calc(100% * (9/12))

.u-col-10
  width: calc(100% * (10/12))
  flex-basis: calc(100% * (10/12))

.u-col-11
  width: calc(100% * (11/12))
  flex-basis: calc(100% * (11/12))

.u-center
  text-align: center

.u-right
  text-align: right

.u-flex-align-center
  align-items: center

.u-lead
  font-size: 20px
  line-height: 32px

.btn
  display: inline-block
  background-color: $black
  color: $white
  font-size: 20px
  line-height: 32px
  font-weight: 600
  padding: 10px 20px
  border-radius: 6px
  text-decoration: none !important

  &:hover
    background-color: #3d3e40

.btn--cta
  background-color: #40f1a4
  color: $black
  border-radius: 999px
  padding: 15px 30px

  &:hover
    background-color: #88f6c7

.u-no-border
  border: 0

.u-margin-reg-bottom
  margin-bottom: 15px

.u-margin-big-bottom
  margin-bottom: 20px

